{
  "name": "deadliner-web",
  "version": "0.1.0",
  "description": "Deadliner - Task Management and Habit Tracking Desktop App",
  "author": "Deadliner Team",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@iconify/react": "^6.0.2",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-date-pickers": "^8.12.0",
    "@mui/x-date-pickers-pro": "^8.12.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.4.1",
    "canvas-confetti": "^1.9.3",
    "date-fns": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^11.0.0",
    "lucide-react": "^0.544.0",
    "node-cron": "^4.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "uuid": "^13.0.0",
    "web-vitals": "^2.1.4",
    "webdav": "^5.8.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/canvas-confetti": "^1.9.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.deadliner.app",
    "productName": "Deadliner",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "extraMetadata": {
      "main": "public/electron.js"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/storage.js",
      "public/database.js",
      "public/settings.js",
      "public/webdav.js"
    ],
    "extraResources": [
      {
        "from": "public/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "public/icon.png",
        "to": "icon.png"
      },
      {
        "from": "public/icon.icns",
        "to": "icon.icns"
      }
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "public/icon.ico",
      "artifactName": "Deadliner-${version}-Portable.exe",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
